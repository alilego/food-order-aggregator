<html>
    <head>
        <title>respir.info</title>
        
        <link rel="stylesheet" href="//maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
        <link rel="stylesheet" href="/stylesheets/main.css">
        
        <script src="https://code.jquery.com/jquery-3.2.1.min.js" integrity="sha256-hwg4gsxgFZhOsEEamdOYGBf13FyQuiTwlAQgxVSNgt4=" crossorigin="anonymous"></script>
        <script src="//maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js" integrity="sha384-Tc5IQib027qvyjSMfHjOMaLkfuWVxZxUPnCJA7l2mCWNIpG9mGCD8wGNIcPD7Txa" crossorigin="anonymous"></script>
    </head>
    <body>
    <nav class="navbar navbar-default">
        <div class="container-fluid">
            <div class="navbar-header">
                <a class="navbar-brand" href="/">Respir?</a>
            </div>
            <% if(currentUser){ %>
                <ul class="nav navbar-nav navbar-left">
                    <li><a href="#">Sunt <strong><%= currentUser.username %></strong></a></li>
                </ul>
            <% } %>
            <div class="collapse navbar-collapse">
                <ul class="nav navbar-nav navbar-right">
                    <li><a href="/articles">Articole</a></li>
                    <% if(!currentUser){ %>
                        <li><a href="/login"><span class="glyphicon glyphicon-log-in"></span> Login</a></li>
                        <li><a href="/register"><span class="glyphicon glyphicon-user"></span> Cont nou</a></li>
                    <% } else { %>
                        <li class="dropdown">
                        <% if(currentUser.isContributor || currentUser.isEditor || currentUser.isApprover){ %>
                            <a class="dropdown-toggle" data-toggle="dropdown" href="#">Actiuni
                            <span class="caret"></span></a>
                            <ul class="dropdown-menu">
                            <% if(currentUser.isEditor){ %>
                                <li><a href="/articles/add">Adaug articol</a></li>
                            <% } %>    
                            <% if(currentUser.isContributor){ %>
                                <li><a href="/admin">Adaug masuratori</a></li>
                            <% } %> 
                            <% if(currentUser.isApprover){ %>
                                <li><a href="/user/approve">Aprobari</a></li>
                            <% } %>
                            </ul>
                        <% } %>
                        </li>
                        <li class="dropdown">
                            <a class="dropdown-toggle" data-toggle="dropdown" href="#">Setari
                            <span class="caret"></span></a>
                            <ul class="dropdown-menu">
                                <li><a href="/user/profile">Profil</a></li>
                                <li><a href="/user/preferences">Preferinte</a></li>
                            <% if(currentUser.isAdmin){ %>
                                <li><a href="/user/admin">Administrare</a></li>
                            <% } %>    
                            </ul>
                        </li>
                        <li><a href="/logout"><span class="glyphicon glyphicon-log-out"></span> Logout</a></li>
                    <% } %>
                </ul>
            </div>
        </div>
    </nav>
    
    <div class="container">
        
        <% if(error && error.length > 0){ %>
            <div class="alert alert-danger" role="alert">
                <%= error %>
            </div>
        <% } %>
        <% if(success && success.length > 0){ %>
            <div class="alert alert-success" role="alert">
                <%= success %>
            </div>
        <% } %>
    </div>
    
    
    
    
    
    
    